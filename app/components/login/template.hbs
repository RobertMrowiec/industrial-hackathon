<div class="flex justify-center align-center">
  <form class="flex flex-col bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-2/4 mx-auto items-center">
    <div class="text-gray-900 text-3xl mb-6">
      Login
    </div>
    <div class="mb-6">
      <label class="block form-label mb-2" for="email">
        Email
      </label>
      <Input
        @value={{this.userEmail}}
        id="email"
        name="email"
        placeholder="Email address"
        type="text"
        class="w-64 bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal"
      />
    </div>

    <div class="mb-6">
      <label class="block form-label mb-2" for="password">
        Password
      </label>
      <Input
        @value={{this.userPassword}}
        type="password"
        name="password"
        class="w-64 bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal"
      />
    </div>

    <button 
      class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"
      {{on "click" this.login}}
    >
      Sign in
    </button>
  </form>
</div>
